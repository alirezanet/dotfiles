{
    // Terminal Configs
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.shellArgs.windows": [
        "-i"
    ],
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    "terminal.integrated.shellArgs.linux": [
        "-i"
    ],
    // "terminal.integrated.fontFamily": "Monaco, Hack",
    // jspcd Configs
    "jscpd.skipComments": true,
    "jscpd.minTokens": 50,
    "jscpd.languagesExts": "javascript:es5,es6,es7,js",
    "window.menuBarVisibility": "toggle",
    "window.enableMenuBarMnemonics": false,
    "window.customMenuBarAltFocus": false,
    "window.restoreWindows": "none",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "workbench.settings.editor": "json",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.value": 10,
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.pinnedTabSizing": "shrink",
    // ZenMode Configs
    "zenMode.hideStatusBar": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.restore": true,
    "editor.renameOnType": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Monaco for Powerline', Hack,  'Consolas ligaturized', Consolas , Monaco, 'B Nazanin', Hack ,'Fira Code'  ",
    "editor.fontSize": 14,
    "editor.minimap.enabled": true,
    "editor.minimap.scale": 1,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 100,
    "editor.parameterHints.cycle": true,
    "editor.lineNumbers": "on",
    "editor.semanticHighlighting.enabled": false,
    "editor.autoIndent": "full",
    "editor.suggestSelection": "first",
    "editor.foldingStrategy": "auto",
    "editor.folding": true,
    // "editor.showFoldingControls": "always",
    // Git Configs
    "git.confirmSync": true,
    "git.autofetch": true,
    "git.suggestSmartCommit": false,
    "gitlens.keymap": "none",
    // Git Project Manager
    "gitProjectManager.baseProjectsFolders": [
        "/home/alireza/Sources"
    ],
    // "vim.statusBarColorControl": true,
    // "vim.statusBarColors.normal": "#222226",
    // "vim.statusBarColors.insert": "#201920",
    // "vim.statusBarColors.commandlineinprogress": "#222221",
    // "vim.statusBarColors.searchinprogressmode": "#201929",
    "vim.startInInsertMode": false,
    //"vim.useSystemClipboard": true,
    "vim.camelCaseMotion.enable": true,
    "vim.useCtrlKeys": false,
    "vim.highlightedyank.enable": true,
    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-c>": false,
        "<C-r>": true,
        "<C-d>": true,
        "<C-u>": true,
        "<C-o":true,
        "<C-i":true,
        "<C-q>": true,
        "<C-[>": true,
    },
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ],
        },
    ],
    "vim.leader": " ",
    // Rainbow Indent
    "indentRainbow.colors": [
        "rgba(16,16,16,0.11)",
        "rgba(16,16,16,0.21)",
        "rgba(16,16,16,0.31)",
        "rgba(16,16,16,0.41)",
        "rgba(16,16,16,0.51)",
        "rgba(16,16,16,0.61)",
        "rgba(16,16,16,0.71)",
        "rgba(16,16,16,0.81)",
        "rgba(16,16,16,0.91)",
        "rgba(16,16,16,1.0)"
    ],
    "indentRainbow.errorColor": "rgba(100,16,32,0.3)",
    // Csharp
    "csharp.format.enable": true,
    "csharp.suppressDotnetRestoreNotification": true,
    "csharp.referencesCodeLens.enabled": true,
    "csharp.semanticHighlighting.enabled": true,
    // Csharpfixformat
    "csharpfixformat.style.braces.allowInlines": true,
    "csharpfixformat.style.braces.onSameLine": false,
    "csharpfixformat.style.indent.regionIgnored": true,
    "csharpfixformat.sort.usings.enabled": true,
    "csharpfixformat.style.enabled": true,
    "csharpfixformat.style.newline.atEnd": false,
    "csharpfixformat.style.indent.switchCaseIgnored": true,
    "csharpfixformat.style.indent.preprocessorIgnored": true,
    "csharpfixformat.style.spaces.beforeParenthesis": false,
    // defaultFormatters
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[csharp]": {
        "editor.defaultFormatter": "Leopotam.csharpfixformat"
    },
    "omnisharp.autoStart": false,
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.enableRoslynAnalyzers": true,
     
    //Files
    "files.watcherExclude": {
        // fix warnings in linux systems. ex: rust compiler
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/target/**": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/obj": true
    },
    // Prettier and Vetur
    "prettier.singleQuote": true,
    "prettier.semi": false,
    "prettier.jsxSingleQuote": true,
    "prettier.vueIndentScriptAndStyle": true,
    "vetur.format.defaultFormatterOptions": {
        "prettier": {
            "semi": false,
            "singleQuote": true,
            "useEditorConfig": true
        }
    },
    // eslint
    "eslint.options": {
        "extensions": [
            ".js",
            ".vue"
        ]
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "vue"
    ],
    // Sync Settings
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.forceDownload": false,
    "sync.forceUpload": true,
    "sync.quietSync": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.gist": "fb7f0a7ddd3c4aca76af43cedc01aff5",
    // CSpell
    "cSpell.userWords": [
        "Ganss",
        "Hsts",
        "Proto",
        "Queryable",
        "Xunit",
        "commandline",
        "gridify",
        "miladi",
        "nuget",
        "typeof"
    ],
    "cSpell.language": "en,fa,fa-IR",
    // "cSpell.ignoreRegExpList": [
    //    "/[\\u0621-\\u064A]+/"
    // ],
    // Todo-tree
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "UNDONE",
        "REVIEW"
    ],
    "todo-tree.general.tagGroups": {
        "FIXME": [
            "FIXME",
            "FIXIT",
            "FIX",
        ],
    },
    "todo-tree.tree.showScanModeButton": true,
    "todo-tree.tree.flat": true,
    // Other Extensions
    "vsicons.dontShowNewVersionMessage": true,
    "dotnet-test-explorer.enableTelemetry": false,
    "c-cpp-compile-run.run-in-external-terminal": true,
    "vsintellicode.modify.editor.suggestSelection": "enabled",
    "liveServer.settings.donotShowInfoMsg": true,
    "python.languageServer": "Microsoft",
    "workbench.colorTheme": "Soothing",
    "problems.showCurrentInStatus": true,
}